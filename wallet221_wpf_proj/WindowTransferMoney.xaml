<Window x:Class="wallet221_wpf_proj.WindowTransferMoney"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wallet221_wpf_proj"
        mc:Ignorable="d"
        Title="WindowTransferMoney" Height="120" Width="200" Background="#FF340063">
    <Grid>
        <StackPanel>
            <TextBlock Text="Перевести c карты на вклад" Foreground="White" FontSize="14"/>
            <TextBox x:Name="transferTextBox" FontSize="14" Foreground="White" Background="BlueViolet" Margin="5"/>             
            <StackPanel>
                <Button Background="#FF4EFF00" Name="Start" Content="Перевести" FontSize="12" Margin="5" Click="transferBtn"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
