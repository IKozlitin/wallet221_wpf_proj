<Window x:Class="wallet221_wpf_proj.WindowTopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wallet221_wpf_proj"
        mc:Ignorable="d"
        Title="WindowTopUp" Height="120" Width="200" Background="#FF340063">
    <Grid>
        <StackPanel>
            <TextBlock Text="Пополнить баланс" Foreground="White" FontSize="14"/>
            <TextBox x:Name="topupTextBox" FontSize="14" Foreground="White" Background="BlueViolet" Margin="5"/>            
            <StackPanel>
                <Button Background="#FF4EFF00" Name="TopUp" Content="Пополнить" FontSize="12" Margin="5" Click="topUpBtn"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
