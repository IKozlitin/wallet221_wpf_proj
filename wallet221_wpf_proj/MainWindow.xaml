<Window x:Class="wallet221_wpf_proj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wallet221_wpf_proj"
        mc:Ignorable="d"
        Title="Wallet221" Height="480" Width="300">
    <Grid Background="DimGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Name="client" Background="#FF340063" Grid.Row="0">
            <TextBlock FontSize="15" Foreground="White" FontWeight="Bold" Text="{Binding FirstName}"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <Expander Header="Карты" IsExpanded="True">
                <StackPanel>
                    <ListBox Background="BlueViolet" Name="cardList">
                        <TextBlock FontSize="12" Foreground="White" Text="{Binding CardName}"/>
                        <TextBlock FontSize="14" Foreground="White" Text="{Binding CardBalance}"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Background="#FF4EFF00" Name="addCardBtn" Content="Добавить" FontSize="10" Margin="5,5,10,5"/>
                            <Button Background="#FF4EFF00" Name="topUpCardBtn" Content="Пополнить" FontSize="10" Margin="5,5,10,5"/>
                            <Button Background="#FF4EFF00" Name="transferMoneyBtn" Content="Перевести на вклад" FontSize="10" Margin="5,5,5,5"/>
                        </StackPanel>
                    </ListBox>
                </StackPanel>
            </Expander>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <Expander Header="Вклады" IsExpanded="True">
                <StackPanel>
                    <ListBox Background="BlueViolet" Name="depositList">
                        <TextBlock FontSize="12" Foreground="White" Text="{Binding DepositName}"/>
                        <TextBlock FontSize="14" Foreground="White" Text="{Binding DepositBalance}"/>
                        <TextBlock FontSize="12" Foreground="White" Text="{Binding DepositPercent}"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Background="#FF4EFF00" Name="openDepositBtn" Content="Открыть" FontSize="10" Margin="5,5,10,5"/>
                            <Button Background="#FF4EFF00" Name="addDepositBtn" Content="Пополнить" FontSize="10" Margin="5,5,10,5"/>
                            <Button Background="#FF4EFF00" Name="transferDepositBtn" Content="Перевести на карту" FontSize="10" Margin="5"/>
                        </StackPanel>
                    </ListBox>
                </StackPanel>
            </Expander>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <Expander Header="Курс валют" IsExpanded="True">
                <StackPanel>
                    <ListBox Background="BlueViolet" Name="exchangeRateList">
                        <TextBlock FontSize="10" Text="{Binding RubExRate}"/>
                        <TextBlock FontSize="10" Text="{Binding UsdExRate}"/>
                        <TextBlock FontSize="10" Text="{Binding EurExRate}"/>
                        <TextBlock FontSize="10" Text="{Binding CnyExRate}"/>
                    </ListBox>
                </StackPanel>
            </Expander>
        </StackPanel>

        <StackPanel Grid.Row="4">
            <ListBox Background="#FF340063">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock FontSize="10" Text="{Binding History}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
